{
    "compilerOptions": {
        "rootDirs": [
            "nodes",
            "credentials"
        ],
        "target": "es2019",
        "lib": [
            "es2019",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "nodes/**/*",
        "credentials/**/*"
    ]
}